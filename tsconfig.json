{
	"compilerOptions": {
		"target": "ES5",
		"module": "ESNext",
		"jsx": "react",
		"sourceMap": true,
		"moduleResolution": "Bundler",
		"isolatedModules": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"resolveJsonModule": true
	},
	"include": ["src", "src/global.d.ts"]
}
